# Chat8 项目环境变量配置

# 应用配置
APP_NAME=Chat8
APP_VERSION=1.0.0
ENVIRONMENT=development

# 前端配置
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
VITE_APP_TITLE=Chat8 - 安全即时通信

# 后端配置
SECRET_KEY=your-super-secret-key-change-this-in-production
DATABASE_URL=sqlite:///./data/database/chat8.db
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=8080

# CORS配置
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:8081,http://127.0.0.1:8081,http://localhost:8082,http://127.0.0.1:8082

# 邮件配置 (可选)
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=your-email@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.example.com
MAIL_TLS=true
MAIL_SSL=false

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# 安全配置
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_HTTPS=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./data/logs/chat8.log
ENABLE_FILE_LOGGING=true

# 数据库配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30