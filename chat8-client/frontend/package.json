{
  "name": "chat8-frontend",
  "version": "1.0.0",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite --host --open",
    "dev:8080": "PORT=8080 vite --host --open",
    "dev:8081": "PORT=8081 vite --host --open",
    "dev:8082": "PORT=8082 vite --host --open",
    "dev:multi": "../scripts/start-multi-ports.sh",
    "dev:smart": "../scripts/start-smart-ports.sh",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && electron .\"",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "crypto-js": "^4.2.0",
    "dexie": "^4.0.11",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^6.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.chat8.app",
    "productName": "Chat8",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      ".env"
    ],
    "extraResources": [
      {
        "from": "../../chat8-server",
        "to": "chat8-server",
        "filter": ["!node_modules", "!**/*.pyc", "!**/__pycache__", "!.git"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chat8"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  }
}
